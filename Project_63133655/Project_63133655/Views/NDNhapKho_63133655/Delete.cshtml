@model Project_63133655.Models.NDNHAPKHO

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    string[] soID = System.IO.File.ReadAllLines(Server.MapPath("~/saveID.txt"));
}

<h2>NỘI DUNG PHIẾU NHẬP KHO</h2>
<h4>Số phiếu: @soID[0]</h4>

<h3>Bạn có chắc chắn muốn xóa nội dung này?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Mã cà phê
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaCF)
        </dd>

        <dt>
            Loại cà phê
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LoaiCF)
        </dd>

        <dt>
